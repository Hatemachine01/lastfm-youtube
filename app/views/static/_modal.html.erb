<div class="modal-dialog">
	<div class="modal-content">
  		<div class="modal-header">
   <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;          </button>
    <h4 class="modal-title" id="myModalLabel"></h4>
  		</div>
    <div class="modal-body">
	<iframe id="ytplayer" type="text/html" width="540" height="360"
  src="https://www.youtube.com/embed/<%= video_id(@song)%>?autoplay=1"
  frameborder="0"/>	
  </iframe>
	<div class="modal-footer">
    <%= link_to "Previous", previous_path(:username => @username, :previous => @song) , remote:true %> ||  <%= link_to "Next", next_path(:username => @username , :next => @song ) , remote:true %>
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  </div>
  </div>
</div>