<div class="form">	
	<%= form_for @username  do |form| %>
	<% if @username.errors.any? %>
		<% @username.errors.full_messages.each do |error| %>
			<%= js add_gritter(error, title: "LastFm-Youtube Notification", sticky: false) %>
		<% end %>
	<% end %>

		  <div class="form-group">
		  	<%= form.label :username %>
		  	<%= form.text_field :username  , placeholder: "type in your lastfm username to play your favorited tracks",  class: "form-control" %>
		 </div>
		 
		  <div class="form-group">
		  	<%= form.submit 'Submit', class: 'btn btn-primary ' %>
		  </div>
		 
	<% end  %>
</div>


